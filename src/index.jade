extends ./_layouts-includes/_layout.jade

//- 10 % 3 // = 1 ; because 3 * 3 gets you 9, and 10 - 9 is 1.



block content
  - each card, i in cards
    .card-sheet
      //- if i = 3n+1
      //- then it is the first of three: tl tr
      - if ( (i+1) % 3 == 1 )
        //- .erg
        //-   | erg: #{ (i+1) % 3}
        .cutmark.top-left
        .cutmark.top-right

      //- if i = 3n+2
      //- then it is the 2nd of three: l r
      - if ( (i+1) % 3 == 2 )
        //- .erg
        //-   | erg: #{ (i+1) % 3}
        .cutmark.left
        .cutmark.right



      //- if i = 3n
      //- 3rd of 3: bl br
      - if ( (i+1) % 3 == 0 )
        //- .erg
        //-   | erg: #{ (i+1) % 3}
        .cutmark.left
        .cutmark.right
        .cutmark.bottom-left
        .cutmark.bottom-right



      .card.front
        .name
          span.id= i
          | &nbsp; &nbsp;
          span= card.name

        .text= card.text


      .card.back
        | back






  //- holds inline ui-lang and jquery
  include ./_layouts-includes/_interaction.jade